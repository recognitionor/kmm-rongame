CREATE TABLE CardEntity (
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    name TEXT NOT NULL,
    cost INTEGER,
    grade INTEGER,
    image TEXT,
    type TEXT NOT NULL,
    attack INTEGER,
    defense INTEGER,
    speed INTEGER,
    hp INTEGER,
    mp INTEGER
);

getCardList:
SELECT *
FROM CardEntity
ORDER BY id ASC;

insertCardEntity:
INSERT INTO CardEntity(
    name,
    cost,
    grade,
    image,
    type,
    attack,
    defense,
    speed,
    hp,
    mp
) VALUES (?,?,?,?,?,?,?,?,?,?);
