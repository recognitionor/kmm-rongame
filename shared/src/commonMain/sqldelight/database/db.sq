--UserInfoEntity
--유저 정보--
CREATE TABLE UserInfoEntity (
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    name TEXT NOT NULL,
    money INTEGER
);

getUserInfo:
SELECT *
FROM UserInfoEntity
ORDER BY id ASC;

insertUser:
INSERT OR REPLACE
INTO UserInfoEntity(
    id,
    name,
    money
) VALUES (1,?, ?);

updateUser:
UPDATE UserInfoEntity
SET money = ?
WHERE id = 1;

updateUserMoney:
UPDATE UserInfoEntity
SET money = money - ?
WHERE id = 1;
